<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="8dp"
    android:layout_marginTop="2dp">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/horizontal_margin"
        app:cardCornerRadius="@dimen/horizontal_margin">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/horizontal_margin">
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:text="Md. Sujauddoullah Ahmed"/>
            <TextView
                android:id="@+id/mob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:text="01682320265"
                android:layout_below="@+id/name"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/dis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:text="Dis: Madaripur"
                android:layout_below="@+id/mob"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="Sex: M"
                android:layout_alignLeft="@+id/age"
                android:layout_alignBaseline="@+id/name"/>
            <TextView
                android:id="@+id/age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="Age: 58 Y"
                android:layout_alignBaseline="@+id/mob"/>
            <ImageView
                android:id="@+id/red_flag"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:src="@drawable/red_flag"
                android:layout_toRightOf="@+id/name"

                android:visibility="gone"/>
            <ImageView
                android:id="@+id/blue_flag"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:src="@drawable/blue_flag"
                android:layout_toRightOf="@+id/name"
                android:visibility="gone"/>
            <ImageView
                android:id="@+id/star"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:src="@drawable/star"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/age"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/samDT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/age"/>
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>